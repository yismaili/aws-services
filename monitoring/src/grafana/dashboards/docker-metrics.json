{
  "id": null,
  "title": "Docker Container Monitoring",
  "tags": ["docker", "containers", "cadvisor"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Container Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(container_last_seen{name!=\"\"})",
          "legendFormat": "Total Containers",
          "refId": "A"
        },
        {
          "expr": "count(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) > 0)",
          "legendFormat": "Running Containers",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "orientation": "horizontal"
      }
    },
    {
      "id": 2,
      "title": "Total CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) * 100",
          "legendFormat": "Total CPU %",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Total Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{name!=\"\"}) / 1024 / 1024 / 1024",
          "legendFormat": "Total Memory GB",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "GB",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 4},
              {"color": "red", "value": 8}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {"mode": "none", "group": "A"},
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {"type": "linear"},
            "hideFrom": {"legend": false, "tooltip": false, "vis": false},
            "thresholdsStyle": {"mode": "off"}
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "MB",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Container Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m]) * 8",
          "legendFormat": "{{name}} - RX",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m]) * 8",
          "legendFormat": "{{name}} - TX",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "unit": "bps",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "title": "Container Disk I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} - Read",
          "refId": "A"
        },
        {
          "expr": "rate(container_fs_writes_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} - Write",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "title": "Container Memory Limits",
      "type": "table",
      "targets": [
        {
          "expr": "container_spec_memory_limit_bytes{name!=\"\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "container_memory_usage_bytes{name!=\"\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "B",
          "format": "table",
          "instant": true
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "fieldConfig": {
        "defaults": {
          "unit": "MB",
          "custom": {
            "displayMode": "list",
            "inspect": false
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "name"},
            "properties": [
              {"id": "displayName", "value": "Container"}
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true
            }
          }
        }
      ]
    },
    {
      "id": 9,
      "title": "Container Restart Count",
      "type": "stat",
      "targets": [
        {
          "expr": "container_start_time_seconds{name!=\"\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "fieldConfig": {
        "defaults": {
          "unit": "dateTimeFromNow",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal"
      }
    },
    {
      "id": 10,
      "title": "Top CPU Consuming Containers",
      "type": "bargauge",
      "targets": [
        {
          "expr": "topk(5, rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "continuous-GrYlRd"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 11,
      "title": "Top Memory Consuming Containers",
      "type": "bargauge",
      "targets": [
        {
          "expr": "topk(5, container_memory_usage_bytes{name!=\"\"} / 1024 / 1024)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
      "fieldConfig": {
        "defaults": {
          "unit": "MB",
          "color": {"mode": "continuous-BlPu"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "30s",
  "schemaVersion": 36,
  "version": 1
}